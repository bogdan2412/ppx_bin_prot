version = "$(pkg_version)"
description = "Generation of bin_prot readers and writers from types"
requires(-ppx_driver) = "bin_prot ppx_core ppx_type_conv"
requires(ppx_driver) = "ppx_core ppx_type_conv"
archive(ppx_driver, byte          ) = "ppx_bin_prot.cma"
archive(ppx_driver, native        ) = "ppx_bin_prot.cmxa"
archive(ppx_driver, native, plugin) = "ppx_bin_prot.cmxs"
exists_if = "ppx_bin_prot.cma"
ppx(-ppx_driver) = "./ppx"
